<div class="card">
  <div class="card-header">
    <h2 class="card-tile d-flex justify-content-between mb-4">
      <span>Projects</span>
      <%= link_to 'New Project', new_project_path, class: "btn btn-primary" %>
    </h2>
  </div>
  <div class="card-body">
    <% @projects.each do |project| %>
      <%= link_to project, class: "text-decoration-none" do %>
        <div class="card project-card mb-2">
          <div class="card-body">
            <div class="mb-3">
              <div class="mb-3">
              <span class="badge alert-<%= project.badge_color %>">
                <%= project.status %>
              </span>
                <span class='text-secondary'>
                <small>
                  <%= project.percent_complete %>% complete
                  (<%= project.total_complete %>/<%= project.total_tasks %> tasks)
                </small>
              </span>
              </div>
              <h4 class="card-title text-dark fw-b"><%= project.name %></h4>
              <p class="text-secondary"><%= project.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
